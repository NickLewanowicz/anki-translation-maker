{
    "name": "anki-translation-maker",
    "version": "1.0.0",
    "description": "A TypeScript application that generates Anki flashcard decks with translations and audio",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "dev": "pnpm --parallel --recursive dev",
        "build": "pnpm -r build",
        "build:frontend": "cd packages/frontend && pnpm build",
        "start": "cd packages/backend && pnpm start",
        "lint": "pnpm --recursive lint",
        "test": "pnpm --recursive test",
        "clean": "pnpm --recursive clean && rm -rf node_modules",
        "docker:build": "docker build -t anki-translation-maker .",
        "docker:run": "docker run -p 3000:3000 anki-translation-maker",
        "docker:dev": "docker-compose --profile dev up --build"
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "typescript": "^5.3.0"
    },
    "packageManager": "pnpm@8.0.0",
    "engines": {
        "node": ">=18.0.0",
        "pnpm": ">=8.0.0"
    }
}